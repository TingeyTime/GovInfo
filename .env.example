# Database Configuration
DATABASE_URL=postgres://dev:devpass@localhost:5432/govinfo?sslmode=disable

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Server Configuration
PORT=8080
HOST=localhost
ENV=development

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Government Data API Keys (if using external APIs)
CONGRESS_API_KEY=your_congress_api_key
CIVIC_INFO_API_KEY=your_google_civic_info_api_key

# Rate Limiting
SMS_RATE_LIMIT=100
API_RATE_LIMIT=1000

# Batch Job Configuration
BATCH_JOB_ENABLED=true
BATCH_JOB_SCHEDULE=0 9 * * 1  # Monday at 9 AM

# Security
JWT_SECRET=your_jwt_secret_for_internal_apis
WEBHOOK_SECRET=your_twilio_webhook_secret

# Development/Testing
TEST_DATABASE_URL=postgres://dev:devpass@localhost:5432/govinfo_test?sslmode=disable
TWILIO_TEST_MODE=true